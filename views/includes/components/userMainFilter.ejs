    <div class="border-b border-gray-200 py-6">
      <h3 class="-my-3 flow-root">
        <!-- Expand/collapse section button -->
        <button type="button" class="flex w-full items-center justify-between pl-2 bg-[#F3EEEA] dark:bg-[#D0D4CA] dark:hover:bg-[#FEFF86] py-3 text-sm text-gray-400 hover:text-gray-500"
        onclick="toggleFilterCategorySection('filter-section-1')"
         aria-controls="filter-section-1"
          aria-expanded="false">

          <span class="font-medium text-gray-900">Category</span>
          <span class="ml-6 flex items-center">
            <!-- Expand icon, show/hide based on section open state. -->
            <svg class="h-5 w-5 dark:text-black" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>
            <!-- Collapse icon, show/hide based on section open state. -->
            <svg class="h-5 w-5 dark:text-black" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M4 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H4.75A.75.75 0 014 10z" clip-rule="evenodd" />
            </svg>
          </span>
        </button>
      </h3>
      <!-- Filter section, show/hide based on section state. -->
      <div class="pt-6" id="filter-section-1">
        <div class="space-y-4">
          <div class="flex items-center">
            <input id="filter-category-0" name="category[]" value="<%=categories.mountainbikes %>" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 category-checkbox">
            <label for="filter-category-0" class="ml-3 text-sm text-gray-600">Mountain Bikes</label>
          </div>
          <div class="flex items-center">
            <input id="filter-category-1" name="category[]" value="<%=categories.roadbikes %>" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 category-checkbox">
            <label for="filter-category-1" class="ml-3 text-sm text-gray-600">Road Bikes</label>
          </div>
        </div>
      </div>
    </div>
    <div class="border-b border-gray-200 py-6">
      <h3 class="-my-3 flow-root">
        <!-- Expand/collapse section button -->
        <button type="button" class="flex w-full items-center justify-between  pl-2 bg-[#F3EEEA] dark:bg-[#D0D4CA] dark:hover:bg-[#FEFF86] py-3 text-sm text-gray-400x hover:text-gray-500"
         aria-controls="filter-section-2"
         onclick="toggleFilterCategorySection('filter-section-2')"
          aria-expanded="false">

          <span class="font-medium text-gray-900">Size</span>
          <span class="ml-6 flex items-center">
            <!-- Expand icon, show/hide based on section open state. -->
            <svg class="h-5 w-5 dark:text-black" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>
            <!-- Collapse icon, show/hide based on section open state. -->
            <svg class="h-5 w-5 dark:text-black" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M4 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H4.75A.75.75 0 014 10z" clip-rule="evenodd" />
            </svg>
          </span>
        </button>
      </h3>
      <!-- Filter section, show/hide based on section state. -->
      <div class="pt-6" id="filter-section-2">
        <div class="space-y-4">
          <div class="flex items-center">
            <input id="filter-size-0" name="size[]" value="<%= sizes.small %>" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 size-checkbox">
            <label for="filter-size-0" class="ml-3 text-sm text-gray-600">Small</label>
          </div>
          
          <div class="flex items-center">
            <input id="filter-size-1" name="size[]" value="<%= sizes.medium %>" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 size-checkbox">
            <label for="filter-size-1" class="ml-3 text-sm text-gray-600">Medium</label>
          </div>
          <div class="flex items-center">
            <input id="filter-size-2" name="size[]" value="<%= sizes.large %>" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 size-checkbox">
            <label for="filter-size-2" class="ml-3 text-sm text-gray-600">Large</label>
          </div>
        </div>
      </div>
    </div>
  </form>
  