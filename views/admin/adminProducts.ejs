                // const modalProductColour = document.getElementById('editProductColour');
                const modalDiscountPrice = document.getElementById('editDiscountPrice');
                // const modalFileInput = document.getElementById('file_input')
                const modalProductId = document.getElementById('editProductId')

                const openModalBtnc = openModalBtnElements[0];

                for (const openModalBtn of openModalBtnElements) {
                    openModalBtn.addEventListener('click', (event) => {
                        event.preventDefault();
                        const productId = event.target.closest('tr').dataset.productId;
                        console.log(productId)

                        fetch(`/admin/product/${productId}`)
                            .then((response) => response.json())
                            .then((productDetails) => {
                                console.log(productDetails)

                                modalProductName.value = productDetails.product_name;
                                modalProductPrice.value = productDetails.product_price;
                                modalProductCategory.value = productDetails.category_name.category_name;
                                modalProductQty.value = productDetails.variations[0].quantity;
                                modalProductSize.value = productDetails.variations[0].size.size_name;
                                // modalProductColour.value = productDetails.variations[0].color.color_name;
                                modalDiscountPrice.value = productDetails.discount_price;
                                modalProductId.value = productDetails._id;
                                console.log(modalProductName.value);

                                defaultModalc.style.display = 'block';
                            })
                            .catch((error) => {
                                console.error(error);
                            });
                    });
                }

                // Close modal when the "Close" button is clicked
                closeBtn.addEventListener('click', () => {
                    defaultModalc.style.display = 'none';
                });

                // Close modal if clicked outside the content
                window.addEventListener('click', (event) => {
                    if (event.target === defaultModalc) {
                        defaultModalc.style.display = 'none';
                    }
                });
            </script>

