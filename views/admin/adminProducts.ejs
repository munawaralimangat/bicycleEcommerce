                const closeBtn = document.getElementById('closeBtn');
                const modalProductName = document.getElementById('editProductName');
                const modalProductPrice = document.getElementById('editProductPrice');
                const modalProductCategory = document.getElementById('editProductCategory');
                const modalProductQty = document.getElementById('editProductQty');
