            console.log(id,orderId)
            try {
                const response = fetch(`/admin/accept-req/${orderId}`,{
                    method:'put',
                    headers:{
                        'Content-Type':'application/json'
                    },
                    body:JSON.stringify({id})
                })
            } catch (error) {
                console.error(error)
            }
        }
    </script>